{
  "name": "serverless-glob-merge-yaml",
  "description": "A Serverless Framework plugin that lets you merge serverless.yml files using variables.",
  "version": "0.3.1",
  "author": "Josh Kellendonk <josh@colloco.com>",
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/misterjoshua/serverless-glob-merge-yaml"
  },
  "scripts": {
    "build": "run-s test",
    "test": "run-s test:jest test:sls-test",
    "test:jest": "jest --coverage",
    "test:sls-test": "node sls-test.js",
    "prettier": "pretty-quick --staged",
    "hook:pre-commit": "run-s prettier test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s hook:pre-commit"
    }
  },
  "devDependencies": {
    "copy-dir": "^1.2.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "temp": "^0.9.1"
  },
  "dependencies": {
    "glob": "^7.1.6",
    "lodash": "^4.17.15"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/sls-test/"
    ]
  }
}
