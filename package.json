{
  "name": "serverless-glob-merge-yaml",
  "description": "A Serverless Framework plugin that lets you merge serverless.yml files using variables.",
  "version": "0.4.1",
  "author": "Josh Kellendonk <josh@colloco.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/misterjoshua/serverless-glob-merge-yaml"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --format=cjs --target=node",
    "test": "run-s test:tsdx test:sls-test",
    "test:sls-test": "node sls-test",
    "test:tsdx": "tsdx test --coverage",
    "lint": "tsdx lint",
    "prepare": "tsdx build --format=cjs --target=node",
    "pre-commit": "run-s lint test"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/mylib.esm.js",
  "devDependencies": {
    "@types/jest": "^24.0.24",
    "@types/serverless": "^1.18.4",
    "copy-dir": "^1.2.0",
    "husky": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "temp": "^0.9.1",
    "tsdx": "^0.12.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "@types/deepmerge": "^2.2.0",
    "@types/lodash": "^4.14.149",
    "deepmerge": "^4.2.2",
    "glob": "^7.1.6",
    "lodash": "^4.17.15"
  }
}
